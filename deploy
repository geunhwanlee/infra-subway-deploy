#!/bin/bash

## Î≥ÄÏàò ÏÑ§Ï†ï

txtrst='\033[1;37m' # White
txtred='\033[1;31m' # Red
txtylw='\033[1;33m' # Yellow
txtpur='\033[1;35m' # Purple
txtgrn='\033[1;32m' # Green
txtgra='\033[1;30m' # Gray

EXECUTION_PATH=$(pwd)
SHELL_SCRIPT_PATH=$(dirname $0)
BRANCH=$1
PROFILE=$2

## Ï°∞Í±¥ ÏÑ§Ï†ï
if [[ $# -ne 2 ]]
then
    echo -e "${txtylw}=======================================${txtrst}"
    echo -e "${txtgrn}  << Ïä§ÌÅ¨Î¶ΩÌä∏ üßê >>${txtrst}"
    echo -e ""
    echo -e "${txtgrn} $0 Î∏åÎûúÏπòÏù¥Î¶Ñ ${txtred}{ prod | dev }"
    echo -e "${txtylw}=======================================${txtrst}"
    exit
fi

echo -e "${txtylw}=======================================${txtrst}"
echo -e "${txtgrn}  << Ïä§ÌÅ¨Î¶ΩÌä∏ üßê >>${txtrst}"
echo -e "${txtylw}=======================================${txtrst}"

function check_df() {
  git fetch
  master=$(git rev-parse $BRANCH)
  remote=$(git rev-parse origin/$BRANCH)

  if [[ $master == $remote ]]; then
    echo -e "[$(date)] Nothing to do!!! üò´"
    exit 0
  fi
}
check_df;

## Ï†ÄÏû•ÏÜå pull
function pull() {
  echo -e ""
  echo -e ">> Pull Request üèÉ‚ôÇÔ∏è "
  git pull origin $BRANCH
  git submodule init
  git submodule update
}
pull;

## gradle build
$SHELL_SCRIPT_PATH/gradlew clean build

## ÌîÑÎ°úÏÑ∏Ïä§ pidÎ•º Ï∞æÎäî Î™ÖÎ†πÏñ¥
PID=`pgrep -f $SHELL_SCRIPT_PATH/build/libs/*.jar`

## ÌîÑÎ°úÏÑ∏Ïä§Î•º Ï¢ÖÎ£åÌïòÎäî Î™ÖÎ†πÏñ¥
if [[ -n "$PID" ]]; then
  kill -9 $PID
fi

## ÌîÑÎ°úÏÑ∏Ïä§Î•º Ïã§Ìñâ!
JARFILE=`find $SHELL_SCRIPT_PATH/build/libs/* -name "*jar"`
nohub java -jar -Dspring.profiles.active=$PROFILE $JARFILE 1> ~/subway.log 2>&1 &
